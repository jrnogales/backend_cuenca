<% layout('partials/layout') %>

<h1 style="display:flex;align-items:center;gap:10px">
  <span>👑</span> <span>Panel de Administración</span>
</h1>

<div class="card" style="margin:16px 0">
  <div style="display:flex;gap:10px;flex-wrap:wrap">
    <a href="/admin/reservas" class="btn-primary">📋 Ver reservas</a>
    <a href="/admin/facturas" class="btn-primary">🧾 Ver facturas</a>
    <a href="/admin/paquetes" class="btn-primary">🎒 Paquetes</a>
    <a href="/admin/disponibilidad" class="btn-primary">📅 Disponibilidad</a>
    <a href="/admin/usuarios" class="btn-primary">👤 Usuarios</a>
  </div>
</div>

<div class="card">
  <h3>Resumen</h3>
  <p>Total de reservas: <b><%= stats.reservas %></b></p>
  <p>Facturas emitidas: <b><%= stats.facturas %></b></p>
  <p>Ventas (facturado): <b>$<%= Number(stats.ventas||0).toFixed(2) %></b></p>
</div>
