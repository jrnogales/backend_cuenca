<% layout('partials/layout') %>

<style>
  .admin-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:18px}
  .admin-card{background:#fff;border:1px solid #e5e7eb;border-radius:12px;padding:16px;margin-bottom:16px;box-shadow:0 2px 10px rgba(0,0,0,.05)}
  .admin-links a{display:inline-block;margin:8px 12px 0 0;padding:8px 14px;background:#2563eb;color:#fff;border-radius:10px;text-decoration:none}
  .admin-links a:hover{background:#1e40af}
</style>

<div class="admin-header">
  <h1>👑 Panel de Administración</h1>
  <span class="muted">Hola, <%= user?.nombre || user?.email %> · <b><%= user?.rol %></b></span>
</div>

<div class="admin-card">
  <h3>Gestión rápida</h3>
  <div class="admin-links">
    <a href="/admin/reservas">📅 Ver reservas</a>
    <a href="/admin/facturas">🧾 Ver facturas</a>
    <a href="/">🏠 Inicio</a>
  </div>
</div>

<div class="admin-card">
  <h3>Resumen</h3>
  <p class="muted">Aquí podrás ver estadísticas y atajos de gestión. (Próximamente gráficos).</p>
</div>
