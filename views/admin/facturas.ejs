        <th>Total</th>
        <th>MÃ©todo</th>
        <th>Estado</th>
      </tr>
    </thead>
    <tbody>
      <% facturas.forEach(f => { %>
        <tr>
          <td><%= f.codigo_factura %></td>
          <td><%= f.codigo_reserva || f.reserva_codigo %></td>
          <td><%= f.fecha_emision %></td>
          <td>$<%= Number(f.subtotal||0).toFixed(2) %></td>
          <td>$<%= Number(f.iva||0).toFixed(2) %></td>
          <td>$<%= Number(f.total||0).toFixed(2) %></td>
          <td><%= f.metodo_pago || 'WEB' %></td>
          <td>
            <% const est = (f.estado || 'EMITIDA'); %>
